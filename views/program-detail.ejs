<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FlexFusion - Program Details</title>
    <link rel="stylesheet" href="/css/programs.css">
    <link rel="stylesheet" href="/css/program-detail.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <header>
        <div class="logo-container">
            <img src="/logo.png" alt="FlexFusion Logo" class="logo">
            <h1>FlexFusion</h1>
        </div>
        <nav>
            <ul class="nav-links">
                <li><a href="/" class="<%= (page === 'home') ? 'active' : '' %>">Home</a></li>
                <li><a href="/program" class="<%= (page === 'program') ? 'active' : '' %>">Plans</a></li>
                <li><a href="/diet" class="<%= (page === 'diet') ? 'active' : '' %>">Diet</a></li>
                <li><a href="/store" class="<%= (page === 'store') ? 'active' : '' %>">Store</a></li>
              </ul>
        </nav>
        <div class="auth-buttons">
            <% if (user) { %>
                <a href="/logout" class="login-btn">Logout</a>
                <span>Welcome, <%= user.name %>!</span>
              <% } else { %>
                <a href="/signup" class="signup-btn">Signup</a>
                <a href="/login" class="login-btn">Login</a>
              <% } %>
        </div>
    </header>

    <div class="program-detail-container">
        <div class="program-header">
            <div class="program-banner">
                <img id="program-image" src="" alt="Program Image">
                <div class="program-overlay">
                    <div class="difficulty-badge" id="program-difficulty"></div>
                    <h1 id="program-title"></h1>
                </div>
            </div>
        </div>

        <div class="program-content">
            <div class="program-main">
                <div class="program-overview">
                    <div class="key-details">
                        <div class="detail-item">
                            <i class="fas fa-calendar-alt"></i>
                            <span><%= program.duration %> weeks</span>
                            <p>Duration</p>
                        </div>
                        <div class="detail-item">
                            <i class="fas fa-dumbbell"></i>
                            <span><%= program.sessions_per_week %> days/week</span>
                            <p>Sessions/Week</p>
                        </div>
                        <div class="detail-item">
                            <i class="fas fa-signal"></i>
                            <span><%= program.level.charAt(0).toUpperCase() + program.level.slice(1) %></span>
                            <p>Level</p>
                        </div>
                        <div class="detail-item">
                            <i class="fas fa-users"></i>
                            <span><%= program.enrolled_count %> participants</span>
                            <p>Enrolled</p>
                        </div>
                    </div>
                </div>

                <div class="program-section">
                    <h2>Program Description</h2>
                    <p><%= program.description %></p>
                </div>

                <div class="program-section">
                    <h2>What You'll Learn</h2>
                    <ul class="curriculum-grid">
                        <% program.curriculum.forEach(item => { %>
                            <li><i class="fas fa-check"></i> <%= item %></li>
                        <% }); %>
                    </ul>
                </div>

                <div class="program-section">
                    <h2>Program Features</h2>
                    <div id="features-list" class="features-grid"></div>
                </div>

                <div class="program-section">
                    <h2>Your Trainer</h2>
                    <div class="trainer-profile">
                        <img id="trainer-image" src="" alt="Trainer">
                        <div class="trainer-info">
                            <h3 id="trainer-name"></h3>
                            <p id="trainer-credentials"></p>
                            <p id="trainer-bio"></p>
                        </div>
                    </div>
                </div>

                <div class="program-section">
                    <h2>Reviews</h2>
                    <div class="program-rating">
                        <div class="rating-summary">
                            <div class="rating-average">
                                <span id="average-rating">4.8</span>
                                <div class="stars"></div>
                                <span id="total-reviews"></span>
                            </div>
                        </div>
                        <div id="reviews-list" class="reviews-container"></div>
                    </div>
                </div>
            </div>

            <div class="program-sidebar">
                <div class="enrollment-card">
                    <div class="price-tag">
                        <h3>$<%= program.price %></h3>
                        <span class="original-price" id="original-price"></span>
                    </div>
                    <form actio ="/enroll" method="POST">
                        <input type="hidden" name="programId" value="<%= program.id %>">
                        <button type="submit" class="enroll-button">Enroll in <%= program.name %></button>
                    </form>
                    <div class="enrollment-features">
                        <div class="feature"><i class="fas fa-check"></i> Lifetime Access</div>
                        <div class="feature"><i class="fas fa-check"></i> Mobile App Access</div>
                        <div class="feature"><i class="fas fa-check"></i> Certificate on Completion</div>
                        <div class="feature"><i class="fas fa-check"></i> Community Support</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer>
        <div class="footer-content">
          <div class="footer-logo">
            <img src="/logo.png" alt="FlexFusion Logo" class="footer-logo-img">
            <h3>FlexFusion</h3>
            <p>Personalized fitness & nutrition for every body.</p>
          </div>
          <div class="footer-links">
            <div class="footer-column">
              <h4>Company</h4>
              <ul>
                <li><a href="/about">About Us</a></li>
                <li><a href="/team">Our Team</a></li>
                <li><a href="/careers">Careers</a></li>
                <li><a href="/contact">Contact Us</a></li>
              </ul>
            </div>
    
            <div class="footer-column">
              <h4>Support</h4>
              <ul>
                <li><a href="/faq">FAQ</a></li>
                <li><a href="/privacy">Privacy Policy</a></li>
                <li><a href="/terms">Terms of Service</a></li>
                <li><a href="/help">Help Center</a></li>
              </ul>
            </div>
          </div>
          <div class="footer-social">
            <h4>Connect With Us</h4>
            <div class="social-icons">
              <a href="/#" aria-label="Facebook"><i class="fab fa-facebook-f"></i></a>
              <a href="/#" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
              <a href="/#" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
              <a href="/#" aria-label="YouTube"><i class="fab fa-youtube"></i></a>
            </div>
            <div class="newsletter">
              <h4>Get Weekly Tips & Offers</h4>
              <form class="newsletter-form">
                <input type="email" placeholder="Your email address" aria-label="Email Address">
                <button type="submit">Subscribe</button>
              </form>
            </div>
          </div>
        </div>
        <div class="footer-bottom">
          <p>&copy; 2025 FlexFusion. All rights reserved.</p>
          <div class="footer-bottom-links">
            <a href="/privacy">Privacy</a>
            <a href="/terms">Terms</a>
            <a href="/sitemap">Sitemap</a>
          </div>
        </div>
      </footer>
    <script src="/program-detail.js"></script>
    <script type="module">
        import Auth from './auth.js';
        
        document.querySelector('.enroll-button').addEventListener('click', (e) => {
            e.preventDefault();
            
            if (!Auth.isLoggedIn()) {
                window.location.href = '/login';
                return;
            }
            
            // Get program ID from URL
            const urlParams = new URLSearchParams(window.location.search);
            const programId = urlParams.get('id');
            
            // Redirect to payment page
            window.location.href = `payment?program=${programId}`;
        });
    </script>
</body>
</html>