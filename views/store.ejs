  <!-- Product Detail Modal -->
  <div id="product-modal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <div class="modal-body">
            <div class="product-image-large">
                <img src="" alt="" id="modal-image">
            </div>
            <div class="product-details">
                <h2 id="modal-title"></h2>
                <p class="modal-price"></p>
                <p class="modal-description"></p>
                
                <!-- Size selector (for apparel) -->
                <div class="size-selector" style="display: none;">
                    <h4>Select Size:</h4>
                    <div class="size-options">
                        <button class="size-btn" data-size="S">S</button>
                        <button class="size-btn" data-size="M">M</button>
                        <button class="size-btn" data-size="L">L</button>
                        <button class="size-btn" data-size="XL">XL</button>
                    </div>
                </div>

                <!-- Weight selector (for supplements) -->
                <div class="weight-selector" style="display: none;">
                    <h4>Select Weight:</h4>
                    <select id="weight-select">
                        <option value="500g">500g</option>
                        <option value="1kg">1kg</option>
                        <option value="2kg">2kg</option>
                    </select>
                </div>

                <div class="quantity-selector">
                    <h4>Quantity:</h4>
                    <div class="quantity-controls">
                        <button id="decrease-quantity">-</button>
                        <input type="number" id="quantity" value="1" min="1" max="10">
                        <button id="increase-quantity">+</button>
                    </div>
                </div>

                <button id="add-to-cart-modal" class="add-to-cart-btn">
                    <i class="fas fa-shopping-cart"></i> Add to Cart
                </button>
            </div>
        </div>
    </div>
  </div>

